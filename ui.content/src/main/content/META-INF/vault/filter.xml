<?xml version="1.0" encoding="UTF-8"?>
<workspaceFilter version="1.0">
    <!-- add config to not show the geolocation popup by default -->
    <filter root="/conf/global" mode="merge"/>
    <!-- /conf is always a 'replace' -->
    <filter root="/conf/aemvanilla" mode="replace"/>
    <filter root="/conf/aemvanilla/settings/cloudconfigs" mode="merge" />
    <filter root="/conf/aemvanilla/settings/cloudsettings" mode="merge" />
    <!-- /content/campaigns is always a 'update' -->
    <filter root="/content/campaigns" mode="update"/>
    <!-- /content/aemvanilla is always a 'merge' -->
    <filter root="/content/aemvanilla" mode="merge"/>
    <!-- /content/aemvanilla/es is always a 'merge' -->
    <filter root="/content/aemvanilla/language-masters" mode="merge">
        <include pattern="/content/aemvanilla/language-masters(/.*)?"/>
        <exclude pattern="/content/aemvanilla/language-masters/jcr:content(/.*)?"/>
    </filter>
    <!-- /content/aemvanilla/us is a 'replace' because I need it as replace -->
    <filter root="/content/aemvanilla/us" mode="merge">
        <include pattern="/content/aemvanilla/us(/.*)?"/>
        <exclude pattern="/content/aemvanilla/us/jcr:content(/.*)?"/>
    </filter>
    <!-- /content/dam/aemvanilla/* are always a 'merge' -->
    <filter root="/content/dam/aemvanilla" mode="merge">
        <exclude pattern="/content/dam/aemvanilla(/.*)?"/>
        <include pattern="/content/dam/aemvanilla/jcr:content(/.*)?"/>
    </filter>
    <filter root="/content/dam/aemvanilla/icons" mode="merge"/>
    <filter root="/content/dam/aemvanilla/images" mode="merge"/>
    <!-- /content/experience-fragments are always a 'merge' -->
    <filter root="/content/experience-fragments/aemvanilla" mode="merge"/>
</workspaceFilter>
